<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/myCard2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="50dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myCard1"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/myCard2"
        app:layout_constraintEnd_toStartOf="@+id/myCard2"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/myCard3"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/myCard2"
        app:layout_constraintStart_toEndOf="@+id/myCard2"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/myCard0"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/myCard1"
        app:layout_constraintEnd_toStartOf="@+id/myCard1"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/myCard4"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/myCard3"
        app:layout_constraintStart_toEndOf="@+id/myCard3"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/opponentCard2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="60dp"
        android:text="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opponentCard1"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="@+id/opponentCard2"
        app:layout_constraintEnd_toStartOf="@+id/opponentCard2"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/opponentCard3"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/opponentCard2"
        app:layout_constraintStart_toEndOf="@+id/opponentCard2"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/opponentCard0"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginEnd="12dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/opponentCard1"
        app:layout_constraintEnd_toStartOf="@+id/opponentCard1"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/opponentCard4"
        android:layout_width="59dp"
        android:layout_height="90dp"
        android:layout_marginStart="12dp"
        android:text="4"
        app:layout_constraintBottom_toBottomOf="@+id/opponentCard3"
        app:layout_constraintStart_toEndOf="@+id/opponentCard3"
        tools:layout_editor_absoluteY="529dp" />

    <Button
        android:id="@+id/myBoard2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/myBoard1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myBoard1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginBottom="208dp"
        android:text="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/myBoard0"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="2dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/myBoard1"
        app:layout_constraintEnd_toStartOf="@+id/myBoard1" />

    <Button
        android:id="@+id/myBoard3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="2dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/myBoard2"
        app:layout_constraintStart_toEndOf="@+id/myBoard2" />

    <Button
        android:id="@+id/opponentBoard2"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="@+id/opponentBoard1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/opponentBoard1"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginTop="208dp"
        android:text="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/opponentBoard0"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginEnd="2dp"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/opponentBoard1"
        app:layout_constraintEnd_toStartOf="@+id/opponentBoard1" />

    <Button
        android:id="@+id/opponentBoard3"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:layout_marginStart="2dp"
        android:text="3"
        app:layout_constraintBottom_toBottomOf="@+id/opponentBoard2"
        app:layout_constraintStart_toEndOf="@+id/opponentBoard2" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="New Game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NeoGame"
        app:layout_constraintBottom_toTopOf="@+id/myCard2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myBoard2" />

</android.support.constraint.ConstraintLayout>